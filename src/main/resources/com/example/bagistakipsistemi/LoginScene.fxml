<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bagistakipsistemi.Controllers.LoginSceneController">
   <children>
      <FlowPane layoutX="126.0" layoutY="101.0" prefHeight="217.0" prefWidth="350.0">
         <children>
            <Label fx:id="myTitleLabel" alignment="CENTER" prefHeight="55.0" prefWidth="348.0" text="Giriş Yap" textAlignment="CENTER" />
            <FlowPane alignment="CENTER" hgap="12.0" prefHeight="29.0" prefWidth="346.0">
               <children>
                  <TextField fx:id="myNicknameTextField" promptText="Kullanıcı Adı" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" hgap="53.0" prefHeight="29.0" prefWidth="346.0">
               <children>
                  <TextField fx:id="myPasswordTextField" promptText="Şifre" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" hgap="20.0" prefHeight="36.0" prefWidth="348.0">
               <children>
                  <Button fx:id="myLoginButton" mnemonicParsing="false" onAction="#login" text="Giriş Yap" />
                  <Button fx:id="myBackButton" mnemonicParsing="false" onAction="#switchtomainscene1" text="Geri Dön" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" prefHeight="33.0" prefWidth="350.0">
               <children>
                  <Label fx:id="myForgetPasswordLabel" alignment="CENTER" onMouseClicked="#switchtoforgetpasswordscene" onMouseEntered="#onMouseEntered1" onMouseExited="#onMouseExited1" prefHeight="23.0" prefWidth="91.0" text="Şifremi Unuttum" textFill="#161ef2">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" prefHeight="33.0" prefWidth="350.0">
               <children>
                  <Label fx:id="myLabel1" text="Hesabın Yok Mu ?" />
                  <Label fx:id="myRegisterLabel" alignment="CENTER" onMouseClicked="#switchtoregisterscene" onMouseEntered="#onMouseEntered2" onMouseExited="#onMouseExited2" prefHeight="18.0" prefWidth="42.0" text="Kaydol" textFill="#161ef2">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </FlowPane>
         </children>
      </FlowPane>
   </children>
</AnchorPane>
